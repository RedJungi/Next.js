generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 블로그 포스트 모델
model Post {
  id        Int      @id @default(autoincrement()) // ← 기본 키, 자동 증가
  title     String // ← 필수 문자열
  content   String? // ← 선택적 문자열 (내용이 없을 수도 있음)
  author    String? // ← 선택적 문자열
  published Boolean  @default(true) // ← 기본값 true
  createdAt DateTime @default(now()) // ← 생성 시간
  updatedAt DateTime @updatedAt // ← 업데이트 시간

  @@map("posts") // ← 테이블 이름을 posts로 지정
}
//메시지 외에 다른 필드는 필수
model apply{ // 데모 신청 입력폼 모델
  id        Int      @id @default(autoincrement()) // 기본 키, 자동 증가
  name      String // 이름은 필수
  company   String // 회사명 추가
  email     String   @unique // 이메일은 고유해야 함
  phone     String // 전화번호는 필수
  message   String? // 메시지는 선택적
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("applies")
}

model blog{
  id        Int      @id @default(autoincrement()) // 기본 키, 자동 증가
  title     String
  content   String?
  author    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("blogs")
}